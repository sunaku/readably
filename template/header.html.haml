%head
  %title= target['title']
  %meta{:name => 'date', :content => target[:updated_at].iso8601}
  %meta{:name => 'author', :content => target[:author]}
  %meta{:name => 'keywords', :content => target[:category]}
  %meta{:charset => config['charset']}
  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  %link{:rel => 'stylesheet', :type => 'text/css', :href => compact_file_join(target[:index_path], 'index.css')}
  %link{:rel => 'alternate', :title => 'feed', :type => 'application/atom+xml', :href => compact_file_join(target[:index_path], 'index.atom')}
